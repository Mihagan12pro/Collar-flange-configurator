<Window x:Class="Collar_flange_configurator.MainDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Collar_flange_configurator"
        mc:Ignorable="d"
        Title="Мастер воротниковых фланцев" Height="600" Width="600" ResizeMode="NoResize" ShowInTaskbar="False" >
    <Window.Resources>
        <ResourceDictionary Source="Styles/MainWindowStyles.xaml"></ResourceDictionary>
    </Window.Resources>
    <Grid>
        <TabControl Background="#f0f0f0">

            <TabItem  Header="Главная" Name="MainTabItem" Style="{StaticResource TabItemNCAD}">

                <StackPanel Name="MainTabItemStackPanel"  Orientation="Vertical"  Style="{StaticResource MajorStackPanel}">

                    <Border BorderBrush="Black" BorderThickness="2">
                        <Image Name="MainTabImage" Stretch="Fill" Height="400" Width="587"  Source="Images\Placeholders\MainTab Placeholder.bmp" ></Image>
                    </Border>

                    <StackPanel Orientation="Vertical" Margin="0 20">
                        <GroupBox Header="Выбор способа создания">
                            <StackPanel>
                                <RadioButton Name="Config3DModelRadio">Конфигурация 3D модели</RadioButton>
                                <RadioButton Name="AdaptingModelToAssembleRadio">Подгон модели под сборку</RadioButton>
                            </StackPanel>

                        </GroupBox>
                    </StackPanel>
                    <StackPanel Margin="0 10">
                        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10 -3">
                            <Button Width="62" Height="20" Content="Построить" IsEnabled="False" />
                            <Button Width="60" Height="20" Margin="3 0" Content="Сбросить" IsCancel="True"/>
                        </StackPanel>
                        <StackPanel Name="ChooseAssembleDetails" Margin="0 -40" Orientation="Horizontal" >
  
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

            </TabItem>

            <TabItem Header="Размеры ГОСТ 33259-2015" Style="{StaticResource TabItemNCAD}">

            </TabItem>
            <TabItem Header="Второстепенные размеры" Style="{StaticResource TabItemNCAD}">

            </TabItem>
            <TabItem Header="Прочее" Style="{StaticResource TabItemNCAD}">

            </TabItem>

        </TabControl>
    </Grid>
</Window>
