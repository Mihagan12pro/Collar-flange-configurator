<Window x:Class="Collar_flange_configurator.MainDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Collar_flange_configurator" 
        xmlns:viewmodel="clr-namespace:Collar_flange_configurator.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:CollarFlangeViewModel}"
        xmlns:overrideWPF="clr-namespace:Collar_flange_configurator.WPF_override.TextBoxOverride"
        mc:Ignorable="d"
        Title="Мастер воротниковых фланцев" Height="600" Width="600" ResizeMode="NoResize" ShowInTaskbar="False" >
    <Window.Resources>
        <ResourceDictionary Source="Styles/MainWindowStyles.xaml"></ResourceDictionary>
    </Window.Resources>
    <Grid>
        <TabControl Style="{StaticResource TabControlNCAD}">
            <TabItem  Header="Главная" Name="MainTabItem" Style="{DynamicResource TabItemNCAD}">

                <StackPanel Name="MainTabItemStackPanel"  Orientation="Vertical"  Style="{StaticResource MajorStackPanel}">

                    <Border BorderBrush="Black" BorderThickness="2">
                        <Image Name="MainTabImage" Source="Images/Other/Intro(config).png" Stretch="Fill" Height="350" Width="587"   ></Image>
                    </Border>

                    <StackPanel Orientation="Vertical" Margin="0 5">
                        <GroupBox Header="Выбор способа создания">
                            <StackPanel>
                                <RadioButton Name="Config3DModelRadio" IsChecked = "{Binding IsConfig3DModel}">Конфигурация 3D модели</RadioButton>
                                <RadioButton Name="AdaptingModelToAssembleRadio">Подгон модели под сборку</RadioButton>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Элементы сборки" Width="200" Name="AssembleElemsGroupBox" HorizontalAlignment="Left"  Visibility="{Binding AssembleVisibility}">
                            <StackPanel Name="ChooseAssembleDetails"  Orientation="Vertical">
                                <StackPanel Orientation="Horizontal" Name="TubeStakcPanel" >
                                    <Button>
                                        <Image Source="Images/Icons/cursor.png">

                                        </Image>
                                    </Button>
                                    <Label>Труба</Label>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 3" Name="BoltStackPanel" >
                                    <Button IsEnabled="False">
                                        <Image Source="Images/Icons/cursor.png">

                                        </Image>
                                    </Button>
                                    <Label>Болт/шпилька</Label>

                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                    </StackPanel>
                    
                    <StackPanel  Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0 -30">
                        <Button Width="62" Height="20" Content="Ок" IsEnabled="{Binding IsOkEnabled}" />
                        <Button Width="60" Height="20" Margin="3 0" Content="Отмена" IsCancel="True"/>
                    </StackPanel>
                    
                </StackPanel>
            </TabItem>

            <TabItem Name="SketchTabItem" Header="Чертеж" Style="{DynamicResource TabItemNCAD}">
                <Border BorderBrush="Black" BorderThickness="2">
                    <Image Margin="1" Stretch="Fill" Source="Images/Sketches/collarFlange.png"></Image>
                </Border>
            </TabItem>

            <TabItem Name="SizesTab"  Header="Размеры" Style="{DynamicResource TabItemNCAD}">
                <StackPanel Orientation="Horizontal" Style="{StaticResource MajorStackPanel}">

                    <DataGrid Name="GOST_33259_2015"  Margin="20 10"  VerticalAlignment="Top" Width="310"    Style="{StaticResource TableStyles}" Height="445" Visibility="{Binding TableVisibility}" GridLinesVisibility="All" HorizontalGridLinesBrush="Black">
                        <DataGrid.CellStyle>
                            <Style/>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Dm" HeaderStyle="{StaticResource HeaderStyle}"  CellStyle="{StaticResource CellStyle}" ></DataGridTextColumn>
                            <DataGridTextColumn Header="Dn" HeaderStyle="{StaticResource HeaderStyle}" CellStyle="{StaticResource CellStyle}"></DataGridTextColumn>
                            <DataGridTextColumn Header="d1" HeaderStyle="{StaticResource HeaderStyle}" CellStyle="{StaticResource CellStyle}"></DataGridTextColumn>
                            <DataGridTextColumn Header="b"  HeaderStyle="{StaticResource HeaderStyle}" CellStyle="{StaticResource CellStyle}"></DataGridTextColumn>
                            <DataGridTextColumn Header="H" HeaderStyle="{StaticResource HeaderStyle}" CellStyle="{StaticResource CellStyle}" ></DataGridTextColumn>
                            <DataGridTextColumn Header="H1" HeaderStyle="{StaticResource HeaderStyle}" CellStyle="{StaticResource CellStyle}"></DataGridTextColumn>
                            <DataGridTextColumn Header="D"  HeaderStyle="{StaticResource HeaderStyle}" CellStyle="{StaticResource CellStyle}"></DataGridTextColumn>
                            <DataGridTextColumn Header="D1" HeaderStyle="{StaticResource HeaderStyle}" CellStyle="{StaticResource CellStyle}"></DataGridTextColumn>
                            <DataGridTextColumn Header="d"  HeaderStyle="{StaticResource HeaderStyle}" CellStyle="{StaticResource CellStyle}"></DataGridTextColumn>
                            <DataGridTextColumn Header="n"  HeaderStyle="{StaticResource HeaderStyle}" CellStyle="{StaticResource CellStyle}"></DataGridTextColumn>
                        </DataGrid.Columns>
                        
                    </DataGrid>

                    <StackPanel Orientation="Vertical"  >
                        <GroupBox  Header="ГОСТ 33259-2015" HorizontalAlignment="Center" VerticalAlignment="Top" Width="220" Height="280">
                            <StackPanel>
                                
                                <StackPanel Style="{StaticResource FieldSet}">
                                    <Label Style="{StaticResource LabelFromFieldSet}" Content="Dm"></Label>
                                    <overrideWPF:DoubleBox  Style="{StaticResource TextBoxFromFieldSet}" IsTextValid="{Binding AreFlangeDiametersValid}" Text="{Binding ValueOfDmSize,UpdateSourceTrigger=PropertyChanged}"></overrideWPF:DoubleBox>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource FieldSet}">
                                    <Label Style="{StaticResource LabelFromFieldSet}" Content="Dn"></Label>
                                    <overrideWPF:DoubleBox Style="{StaticResource TextBoxFromFieldSet}" IsTextValid="{Binding AreFlangeDiametersValid}" Text="{Binding ValueOfDnSize,UpdateSourceTrigger=PropertyChanged}"></overrideWPF:DoubleBox>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource FieldSet}">
                                    <Label Style="{StaticResource LabelFromFieldSet}" Content="d1"></Label>
                                    <overrideWPF:DoubleBox  Style="{StaticResource TextBoxFromFieldSet}" IsTextValid="{Binding AreFlangeDiametersValid}" Text="{Binding ValueOfd1Size,UpdateSourceTrigger=PropertyChanged}"></overrideWPF:DoubleBox>
                                </StackPanel>
                                
                                <StackPanel Style="{StaticResource FieldSet}">
                                    <Label Style="{StaticResource LabelFromFieldSet}" Content="b"></Label>
                                    <overrideWPF:DoubleBox  Style="{StaticResource TextBoxFromFieldSet}" IsTextValid="{Binding AreFlangeHeightsValid}" Text="{Binding ValueOfbSize,UpdateSourceTrigger=PropertyChanged}"></overrideWPF:DoubleBox>
                                </StackPanel>

                                <StackPanel Style="{StaticResource FieldSet}">
                                    <Label Style="{StaticResource LabelFromFieldSet}" Content="H"></Label>
                                    <overrideWPF:DoubleBox  Style="{StaticResource TextBoxFromFieldSet}" IsTextValid="{Binding AreFlangeHeightsValid}" Text="{Binding ValueOfHSize,UpdateSourceTrigger=PropertyChanged}"></overrideWPF:DoubleBox>
                                </StackPanel>

                                <StackPanel Style="{StaticResource FieldSet}">
                                    <Label Style="{StaticResource LabelFromFieldSet}" Content="H1"></Label>
                                    <overrideWPF:DoubleBox  Style="{StaticResource TextBoxFromFieldSet}" IsTextValid="{Binding AreFlangeHeightsValid}" Text="{Binding ValueOfH1Size,UpdateSourceTrigger=PropertyChanged}"></overrideWPF:DoubleBox>
                                </StackPanel>

                                <StackPanel Style="{StaticResource FieldSet}">
                                    <Label Style="{StaticResource LabelFromFieldSet}" Content="D"></Label>
                                    <overrideWPF:DoubleBox  Style="{StaticResource TextBoxFromFieldSet}" IsTextValid="{Binding AreFlangeDiametersValid}" Text="{Binding ValueOfDSize,UpdateSourceTrigger=PropertyChanged}"></overrideWPF:DoubleBox>
                                </StackPanel>

                                <StackPanel Style="{StaticResource FieldSet}">
                                    <Label Style="{StaticResource LabelFromFieldSet}" Content="D1"></Label>
                                    <overrideWPF:DoubleBox  Style="{StaticResource TextBoxFromFieldSet}" IsTextValid="{Binding AreFlangeDiametersValid}" Text="{Binding ValueOfD1Size,UpdateSourceTrigger=PropertyChanged}"></overrideWPF:DoubleBox>
                                </StackPanel>

                                <StackPanel Style="{StaticResource FieldSet}">
                                    <Label Style="{StaticResource LabelFromFieldSet}" Content="d"></Label>
                                    <overrideWPF:DoubleBox  Style="{StaticResource TextBoxFromFieldSet}" IsTextValid="{Binding AreFlangeDiametersValid}" Text="{Binding ValueOfdSize,UpdateSourceTrigger=PropertyChanged}"></overrideWPF:DoubleBox>
                                </StackPanel>

                                <StackPanel Style="{StaticResource FieldSet}">
                                    <Label Style="{StaticResource LabelFromFieldSet}" Content="n"></Label>
                                    <overrideWPF:IntegerBox  Style="{StaticResource TextBoxFromFieldSet}" IsTextValid="{Binding AreFlangeDiametersValid}" Text="{Binding ValueOfnSize,UpdateSourceTrigger=PropertyChanged}"></overrideWPF:IntegerBox>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Прочие размеры"  Height="120" VerticalAlignment="Bottom" Margin="0 30">
                            <StackPanel>

                                <StackPanel Style="{StaticResource FieldSet}">
                                    <Label Style="{StaticResource LabelFromFieldSet}" Content="l1"></Label>
                                    <overrideWPF:DoubleBox  Style="{StaticResource TextBoxFromFieldSet}" IsTextValid="{Binding AreFlangeHeightsValid}" Text="{Binding ValueOfl1Size,UpdateSourceTrigger=PropertyChanged}"></overrideWPF:DoubleBox>
                                </StackPanel>

                                <StackPanel Style="{StaticResource FieldSet}">
                                    <Label Style="{StaticResource LabelFromFieldSet}" Content="R1"></Label>
                                    <overrideWPF:DoubleBox   Style="{StaticResource TextBoxFromFieldSet}" IsTextValid="{Binding AreFlangeDiametersValid}" Text="{Binding ValueOfR1Size,UpdateSourceTrigger=PropertyChanged}"></overrideWPF:DoubleBox>
                                </StackPanel>

                                <StackPanel Style="{StaticResource FieldSet}">
                                    <Label Style="{StaticResource LabelFromFieldSet}" Content="f"></Label>
                                    <overrideWPF:DoubleBox   Style="{StaticResource TextBoxFromFieldSet}" IsTextValid="{Binding IsfValid}" Text="{Binding ValueOffSize,UpdateSourceTrigger=PropertyChanged}"></overrideWPF:DoubleBox>
                                </StackPanel>
                                <StackPanel Style="{StaticResource FieldSet}">
                                    <Label Style="{StaticResource LabelFromFieldSet}" Content="D2"></Label>
                                    <overrideWPF:DoubleBox   Style="{StaticResource TextBoxFromFieldSet}" IsTextValid="{Binding AreFlangeDiametersValid}" Text="{Binding ValueOfD2Size,UpdateSourceTrigger=PropertyChanged}"></overrideWPF:DoubleBox>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <StackPanel Margin="0 -25">
                            <Button HorizontalAlignment="Left" Command="{Binding  StandartSizesCommand}" Content="Размеры по умолчанию" Width="140" Height="20"></Button>
                        </StackPanel>
                        
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
