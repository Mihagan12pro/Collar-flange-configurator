<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    
    <Style x:Key ="MajorStackPanel"  TargetType="StackPanel">
        <Setter Property="Background" Value="#f0f0f0" ></Setter>
        <Setter Property="Margin" Value="2"></Setter>
    </Style>
    
    <Style x:Key="TabControlNCAD" TargetType="TabControl">
        <Setter Property="Background" Value="White"></Setter>
    </Style>
    
    <Style x:Key="TabItemNCAD" TargetType="TabItem">
        <Setter Property="Background" Value="#f0f0f0"/>
    </Style>


    
    
    
    
    
    <Style x:Key="TableStyles" TargetType="DataGrid">
        <Setter Property="CanUserAddRows" Value="False"></Setter>
        <Setter Property="CanUserDeleteRows" Value="False"></Setter>
        <Setter Property="CanUserSortColumns" Value="False"></Setter>
        <Setter Property="CanUserResizeRows" Value="False"></Setter>
        <Setter Property="CanUserReorderColumns" Value="False"></Setter>
        <Setter Property="CanUserResizeColumns" Value="False"></Setter>
        <Setter Property="RowBackground" Value="White"></Setter>
        <Setter Property="HorizontalGridLinesBrush" Value="Black"></Setter>
        <Setter Property="VerticalGridLinesBrush" Value="Black"></Setter>
        <Setter Property="Background" Value="White"></Setter>
    </Style>
    <Style x:Key="CellStyle" TargetType="DataGridCell">
        <Setter Property="FontSize" Value="10"></Setter>
        <Setter Property="Background" Value="White"></Setter>
    </Style>
    <Style x:Key="HeaderStyle" TargetType="DataGridColumnHeader">
        <Setter Property="FontSize" Value="14"></Setter>
        <Setter Property="Background" Value="White"></Setter>
        <Setter Property="Width" Value="26"></Setter>
    </Style>






    <Style x:Key="FieldSet" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"></Setter>
    </Style>
    <Style x:Key="LabelFromFieldSet" TargetType="Label">
        <Setter Property="Width" Value="25"></Setter>
        <Setter Property="Height" Value="25"></Setter>
        <Setter Property="Background" Value="#f0f0f0"></Setter>
        <Setter Property="FontSize" Value="11"></Setter>
        <Setter Property="FontFamily" Value="Calibri"></Setter>
    </Style>
    <Style x:Key="TextBoxFromFieldSet" TargetType="TextBox">
        <Setter Property="Height" Value="15"></Setter>
        <Setter Property="Width" Value="100"></Setter>
        <Setter Property="Margin" Value="2 0"></Setter>
        <Setter Property="FontFamily" Value="Calibri"></Setter>
        <Setter Property="FontSize" Value="11"></Setter>
    </Style>
</ResourceDictionary>