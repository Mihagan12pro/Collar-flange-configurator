                                </StackPanel>

                            <Button Margin="5" Width="100">Построить</Button>
                            </StackPanel>
                    </StackPanel>
               </Viewbox>
            </TabItem>
            
            <TabItem Header="Размеры ГОСТ 33259-2015">
                
            </TabItem>
