<UserControl x:Class="Collar_flange_configurator.CollarFlangeMaster"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Collar_flange_configurator"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="300" Background="White">
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8" Orientation="Horizontal" Width="300">
            <Label Content="Количество примитивов в модели:"/>
            <Label Name="NumEntsLabel" Content="0" MinWidth="50"/>
        </StackPanel>

        <Button Name="UpdateBtn" Content="Обновить" HorizontalAlignment="Left" Height="22" Margin="14,45,0,0" Width="73" VerticalAlignment="Top" />

    </Grid>
</UserControl>
